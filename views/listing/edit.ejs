<% layout("/layout/boilerplate") %>
<body>
    <div class="row">
        <div class="col offset-2">
            <form method="post" action="/listing/<%= findlistt._id %>/edit?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <textarea required rows="4" placeholder="enter the title of property" name="listing[title]" id="" class="form-control"><%= findlistt.title %></textarea>
                    <div class="invalid-feedback">Please Enter Title</div>
                </div>
                <div class="mb-3">
                    <label for="discription" class="form-label">Discription:</label>
                    <textarea required name="listing[description]" rows="6" placeholder="discription" id="" class="form-control"><%= findlistt.description %></textarea>
                    <div class="invalid-feedback">Please Enter Discription</div>

                </div>
                <div class="mb-3">
                    Orignal Listing Image <br><br>
                    <img src="<%= findlistt.image.url %>" alt="">

                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image </label>
                    <input type="file" name="listing[image]"  class="form-control">
                    <div class="invalid-feedback">Image Is Required</div>

                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" required value="<%= findlistt.price %>" name="listing[price]"  class="form-control">
                    <div class="invalid-feedback">Please Enter Price</div>

                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input required value="<%= findlistt.location %>" name="listing[location]" type="text" class="form-control">
                    <div class="invalid-feedback">Please Enter Location</div>

                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country:</label>
                    <input required value="<%= findlistt.country %>" name="listing[country]" type="text" class="form-control">
                    <div class="invalid-feedback">Please Enter Country</div>

                </div>
                <br>
                <button class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
    
    <br>
</body>
