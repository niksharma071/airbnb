<% layout("/layout/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp for AirBnb</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <label for="username" class="form-label">Enter Username</label>
            <input  placeholder="Enter Username" id="username" name="username" class="form-control" required>
            <div class="invalid-feedback">Please Enter Username</div>
            <br>
            <label for="email" class="form-label">Enter Email</label>
            <input  placeholder="Enter Email" id="email" name="email"  class="form-control" required>
            <div class="invalid-feedback">Please Enter Email</div>
            <br>
            <label for="password" class="form-label">Password</label>
            <input  placeholder="Enter Password" id="password" name="password" type="password" class="form-control" required>
            <div class="invalid-feedback">Please Enter Password</div>
            <br>
            <button class="btn btn-dark">SignUp</button>
            <br><br> 
        </form>
    </div>
</div>